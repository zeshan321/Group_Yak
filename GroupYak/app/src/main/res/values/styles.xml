<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/ActionBar</item>
    </style>

    <!-- Action Bar Styles -->
    <style name="ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/actionbar</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>

    </style>

    <style name="MyActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edittext_msg" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColorHint">#ff7d7d7d</item>
        <item name="android:paddingLeft">5.0dip</item>
        <item name="android:paddingRight">5.0dip</item>
        <item name="android:layout_marginLeft">5.0dip</item>
        <item name="android:layout_marginRight">5.0dip</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionSend</item>
        <item name="android:imeActionId">100</item>
    </style>
    <style name="btn" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:minWidth">1.0dip</item>
        <item name="android:minHeight">1.0dip</item>
    </style>
    <style name="btn_blue" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:color">@color/maincolor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="btn_white" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:textColor">@color/maincolor</item>
    </style>
    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>